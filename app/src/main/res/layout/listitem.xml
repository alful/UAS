<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/idTVLNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NO"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:id="@+id/idTVLKode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kode"
            android:layout_weight="2">
        </TextView>
        <TextView
            android:id="@+id/idTVLNamaMatkul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Matkul"
            android:layout_weight="3">
        </TextView>
        <TextView
            android:id="@+id/idTVLSKS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SKS"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:id="@+id/idTVLNAngka"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N Angka"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:id="@+id/idTVLNHuruf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="N Huruf"
            android:layout_weight="1">
        </TextView>
    </LinearLayout>

</LinearLayout>