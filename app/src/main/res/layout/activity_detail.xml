<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="DETAIL MataKuliah"
        android:textSize="20dp"
        android:background="@color/putih"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kode"></TextView>
        <TextView
            android:id="@+id/idTVKode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="MataKuliah"></TextView>
        <TextView
            android:id="@+id/idTVMataKuliah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matakuliah"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nilai Angka"></TextView>
        <TextView
            android:id="@+id/idTVNAngka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NilaiAngka"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Nilai Huruf"></TextView>
        <TextView
            android:id="@+id/idTVNHuruf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NilaiHuruf"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/idBHapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:text="HAPUS"></Button>
        <Button
            android:outlineSpotShadowColor="@color/merah"
            android:id="@+id/idBBatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/putih"
            android:text="BATAL"></Button>
    </LinearLayout>

</LinearLayout>