<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EntryData">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/putih"
        android:background="@color/colorPrimaryDark"
        android:text="Entry data KHS"
        android:layout_weight="1"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/biru"
        android:orientation="vertical"
        android:layout_weight="10"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:layout_weight="1.2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:layout_weight="0.1"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="A11.2018.11464"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:layout_weight="3.7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:layout_weight="1.2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:layout_weight="0.1"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Maheswara Athallah Wijanarko"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:layout_weight="3.7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jurusan"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:layout_weight="1.2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:layout_weight="0.1"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="S1 - TI"
                android:textSize="20dp"
                android:textColor="@color/putih"
                android:layout_weight="3.7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/kotakabumuda"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="7"
            android:weightSum="6">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kode"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/kotakabutua"></TextView>
                <EditText
                    android:id="@+id/idETKode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/kotakabutua"></EditText>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MataKuliah"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/kotakabutua"></TextView>
                <EditText
                    android:id="@+id/idETMataKuliah"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/kotakabutua"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:weightSum="4"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SKS"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/kotakabutua"></TextView>
                <EditText
                    android:id="@+id/idETSKS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/kotakabutua"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:weightSum="4"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N. Angka"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/kotakabutua"></TextView>
                <EditText
                    android:id="@+id/idETNAngka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/kotakabutua"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:weightSum="4"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="N. Huruf"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/kotakabutua"></TextView>
                <EditText
                    android:id="@+id/idETNHuruf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/kotakabutua"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="4"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Predikat"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/kotakabutua"></TextView>
                <EditText
                    android:id="@+id/idETPredikat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/kotakabutua"></EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:weightSum="6">
        <Button
            android:id="@+id/idBSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bulatpinggir"
            android:textColor="@color/putih"
            android:text="SAVE"
            android:layout_weight="1"></Button>
        <Button
            android:id="@+id/idBCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bulatpinggirmerah"
            android:textColor="@color/putih"
            android:layout_marginLeft="10dp"
            android:text="CANCEL"
            android:layout_weight="1"></Button>
    </LinearLayout>

</LinearLayout>